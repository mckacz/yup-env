{
  "name": "yup-env",
  "version": "1.0.1",
  "description": "Environment variables parsing and validation using yup.",
  "repository": "https://github.com/mckacz/yup-env",
  "author": "Maciej Kaczmarek <maciej@kaczmarek.io>",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/{,**/}*.ts",
    "lint:ci": "eslint -o test-reports/eslint.xml -f junit src/{,**/}*.ts",
    "test": "jest",
    "test:ci": "jest --reporters default --reporters jest-junit --ci"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/lodash.set": "^4.3.6",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.10.0",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/yup": "^0.29.7",
    "camelcase": "^6.0.0",
    "lodash.set": "^4.3.2",
    "yup": "^0.29.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "\\.spec.ts$",
    "testEnvironment": "node",
    "reporters": [
      "default"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-reports",
    "outputName": "jest.xml"
  }
}
